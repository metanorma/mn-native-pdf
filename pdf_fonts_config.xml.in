				<font kerning="yes" embed-url="file://${MN_PDF_FONT_PATH}/truetype/msttcorefonts/times.ttf">
					<font-triplet name="Times New Roman" style="normal" weight="normal"/>
				</font>
				<font kerning="yes" embed-url="file://${MN_PDF_FONT_PATH}/truetype/msttcorefonts/timesbd.ttf">
					<font-triplet name="Times New Roman" style="normal" weight="bold"/>
				</font>
				<font kerning="yes" embed-url="file://${MN_PDF_FONT_PATH}/truetype/msttcorefonts/timesbi.ttf">
					<font-triplet name="Times New Roman" style="italic" weight="bold"/>
				</font>
				<font kerning="yes" embed-url="file://${MN_PDF_FONT_PATH}/truetype/msttcorefonts/timesi.ttf">
					<font-triplet name="Times New Roman" style="italic" weight="normal"/>
				</font>
				<font kerning="yes" embed-url="file://${MN_PDF_FONT_PATH}/truetype/msttcorefonts/cour.ttf">
					<font-triplet name="Courier" style="normal" weight="normal"/>
				</font>
				<font kerning="yes" embed-url="file://${MN_PDF_FONT_PATH}/truetype/msttcorefonts/courbd.ttf">
					<font-triplet name="Courier" style="normal" weight="bold"/>
				</font>
				<font kerning="yes" embed-url="file://${MN_PDF_FONT_PATH}/truetype/msttcorefonts/courbi.ttf">
					<font-triplet name="Courier" style="italic" weight="bold"/>
				</font>
				<font kerning="yes" embed-url="file://${MN_PDF_FONT_PATH}/truetype/msttcorefonts/couri.ttf">
					<font-triplet name="Courier" style="italic" weight="normal"/>
				</font>
				<!-- for Chinese glyphs -->
				<!-- https://github.com/Pal3love/Source-Han-TrueType/raw/master/SourceHanSans.7z -->
				<font kerning="yes" embed-url="file://${MN_PDF_FONT_PATH}/truetype/adobe/SourceHanSans-Normal.ttc" sub-font="Source Han Sans Normal"  simulate-style="true">
					<font-triplet name="HanSans" style="normal" weight="normal"/>
					<font-triplet name="HanSans" style="italic" weight="normal"/>
				</font>
				<font kerning="yes" embed-url="file://${MN_PDF_FONT_PATH}/truetype/adobe/SourceHanSans-Bold.ttc" sub-font="Source Han Sans Bold">
					<font-triplet name="HanSans" style="normal" weight="bold"/>
				</font>

        <!--
        <font metrics-url="arial.xml" kerning="yes" embed-url="arial.ttf">
          <font-triplet name="Arial" style="normal" weight="normal"/>
          <font-triplet name="ArialMT" style="normal" weight="normal"/>
        </font>
        <font metrics-url="arialb.xml" kerning="yes" embed-url="arialb.ttf">
          <font-triplet name="Arial" style="normal" weight="bold"/>
          <font-triplet name="ArialMT" style="normal" weight="bold"/>
        </font>
        -->

        <!-- auto-detect fonts -->
        <!-- <auto-detect/> -->

      </fonts>

      <!-- This option lets you specify additional options on an XML handler -->
      <!--xml-handler namespace="http://www.w3.org/2000/svg">
        <stroke-text>false</stroke-text>
      </xml-handler-->

    </renderer>

  </renderers>

</fop>
